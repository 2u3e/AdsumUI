<div class="kt-container-fixed">
  <div
    class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5"
  >
    <div class="flex flex-col justify-center gap-2">
      <h1 class="text-xl font-medium leading-none text-mono">
        Kullanıcı Yönetimi
      </h1>
      <div class="flex items-center flex-wrap gap-1.5 font-medium">
        <span class="text-base text-secondary-foreground">
          Toplam Kullanıcı:
        </span>
        <span class="text-base gray-800 font-semibold me-2"> 49,053 </span>
        <span class="text-base text-secondary-foreground"> Aktif </span>
        <span class="text-base gray-800 font-semibold"> 1724 </span>
      </div>
    </div>
    <div class="flex items-center gap-2.5">
      <button class="kt-btn kt-btn-primary" (click)="onAddUser()" type="button">
        <i class="ki-filled ki-plus text-base"></i>
        <span>Yeni Kullanıcı</span>
      </button>
    </div>
  </div>
</div>
<div class="kt-container-fixed">
  <!-- DataTable Card -->
  <div class="kt-card kt-card-grid min-w-full">
    <!-- Card Header - Search -->
    <div class="kt-card-header">
      <div class="flex items-center gap-3 flex-1"></div>
      <div class="flex items-center gap-3">
        <button
          class="kt-btn kt-btn-outline kt-btn-icon"
          (click)="clearAllFilters()"
          type="button"
          title="Filtreleri ve Aramayı Temizle"
        >
          <i class="ki-filled ki-arrows-circle"></i>
        </button>
        <input
          type="text"
          placeholder="Kullanıcı ara..."
          class="kt-input sm:w-64"
          [(ngModel)]="searchTerm"
          [ngModelOptions]="{ standalone: true }"
        />
        <button
          class="kt-btn kt-btn-light-info relative"
          (click)="openFilterOffcanvas()"
          type="button"
        >
          <i class="ki-filled ki-questionnaire-tablet text-base"></i>
          <span>Filtreler</span>
          @if (getActiveFilterCount() > 0) {
            <span
              class="absolute -top-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-primary text-xs font-semibold text-white"
            >
              {{ getActiveFilterCount() }}
            </span>
          }
        </button>
      </div>
    </div>

    <!-- DataTable -->
    <div class="kt-card-table">
      <div class="kt-table-wrapper kt-scrollable">
        <table class="kt-table">
          <thead>
            <tr>
              <th scope="col" class="w-32">
                <span class="kt-table-col">
                  <span class="kt-table-col-label">Durum</span>
                </span>
              </th>
              <th scope="col" class="min-w-[250px]">
                <span class="kt-table-col">
                  <span class="kt-table-col-label">Ad Soyad</span>
                </span>
              </th>
              <th scope="col" class="min-w-[250px]">
                <span class="kt-table-col">
                  <span class="kt-table-col-label">Kullanıcı Adı</span>
                </span>
              </th>
              <th scope="col" class="w-40">
                <span class="kt-table-col">
                  <span class="kt-table-col-label">İşlemler</span>
                </span>
              </th>
            </tr>
          </thead>
          <tbody>
            @for (user of users(); track user.id) {
              <tr>
                <td>
                  @if (user.status === "active") {
                    <span class="kt-badge kt-badge-light kt-badge-success">
                      <span class="kt-badge-dot"></span>
                      Aktif
                    </span>
                  } @else {
                    <span class="kt-badge kt-badge-light kt-badge-destructive">
                      <span class="kt-badge-dot"></span>
                      Pasif
                    </span>
                  }
                </td>
                <td>
                  <div class="flex flex-col">
                    <span class="text-xs text-gray-500 dark:text-gray-400">
                      {{ user.department }}
                    </span>
                    <span
                      class="text-sm font-medium text-gray-900 dark:text-gray-100"
                    >
                      {{ user.name }}
                    </span>
                  </div>
                </td>
                <td>
                  <div class="flex flex-col">
                    <span
                      class="text-sm font-medium text-gray-900 dark:text-gray-100"
                    >
                      {{ user.email.split("@")[0] }}
                    </span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">
                      {{ user.email }}
                    </span>
                  </div>
                </td>
                <td>
                  <div class="flex items-center gap-2">
                    <button
                      type="button"
                      class="kt-btn kt-btn-icon bg-blue-50 hover:bg-blue-100 text-blue-600 hover:text-blue-700 dark:bg-blue-900/20 dark:hover:bg-blue-900/30 dark:text-blue-400 dark:hover:text-blue-300 border-0 transition-all"
                      (click)="onEditUser(user)"
                      title="Düzenle"
                    >
                      <i class="ki-filled ki-pencil text-lg"></i>
                    </button>
                    <button
                      type="button"
                      class="kt-btn kt-btn-icon bg-red-50 hover:bg-red-100 text-red-600 hover:text-red-700 dark:bg-red-900/20 dark:hover:bg-red-900/30 dark:text-red-400 dark:hover:text-red-300 border-0 transition-all"
                      (click)="onDeleteUser(user)"
                      title="Sil"
                    >
                      <i class="ki-filled ki-trash text-lg"></i>
                    </button>
                  </div>
                </td>
              </tr>
            } @empty {
              <tr>
                <td colspan="4" class="text-center py-8">
                  <div class="text-gray-500 dark:text-gray-400">
                    Kullanıcı bulunamadı
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="kt-datatable-toolbar">
        <div class="kt-datatable-length">
          Gösterilecek kayıt sayısı
          <select
            class="kt-select kt-select-sm w-16"
            [(ngModel)]="pageSize"
            [ngModelOptions]="{ standalone: true }"
          >
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
          </select>
        </div>

        <div class="kt-datatable-info">
          Gösterilen: 1-{{ users().length }} / {{ users().length }}
        </div>

        <div>
          <ol class="kt-pagination">
            <li class="kt-pagination-item">
              <a class="kt-btn kt-btn-ghost">Önceki</a>
            </li>
            <li class="kt-pagination-item">
              <a class="kt-btn kt-btn-icon kt-btn-ghost active">1</a>
            </li>
            <li class="kt-pagination-item">
              <a class="kt-btn kt-btn-icon kt-btn-ghost">2</a>
            </li>
            <li class="kt-pagination-item">
              <a class="kt-btn kt-btn-ghost">Sonraki</a>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Employee Wizard Modal -->
@if (createModalOpen()) {
  <!-- Modal Backdrop -->
  <div
    class="fixed inset-0 bg-black/50 z-[100] transition-opacity"
    (click)="closeCreateModal()"
  ></div>

  <!-- Modal Content -->
  <div class="fixed inset-0 z-[101] flex items-center justify-center p-4">
    <div
      class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-4xl w-full relative max-h-[90vh] flex flex-col"
      (click)="$event.stopPropagation()"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700"
      >
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          Yeni Personel Kaydı
        </h3>
        <button
          type="button"
          class="kt-btn kt-btn-ghost kt-btn-icon kt-btn-sm"
          (click)="closeCreateModal()"
          [disabled]="createFormSubmitting()"
        >
          <i class="ki-filled ki-cross"></i>
        </button>
      </div>

      <!-- Stepper Navigation -->
      <div class="border-b border-gray-200 dark:border-gray-700 px-6 py-4">
        <div class="flex items-center justify-between gap-2">
          <!-- Step 1 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(1)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 1"
              [class.text-primary-foreground]="currentStep() === 1"
              [class.bg-green-500]="currentStep() > 1"
              [class.text-white]="currentStep() > 1"
              [class.bg-muted]="currentStep() < 1"
              [class.text-muted-foreground]="currentStep() < 1"
            >
              @if (currentStep() > 1) {
                <i class="ki-filled ki-check text-sm"></i>
              } @else {
                <span>1</span>
              }
            </div>
            <span class="text-xs font-medium hidden sm:inline">Kimlik</span>
          </div>

          <div class="h-px bg-gray-300 dark:bg-gray-600 flex-1"></div>

          <!-- Step 2 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(2)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 2"
              [class.text-primary-foreground]="currentStep() === 2"
              [class.bg-green-500]="currentStep() > 2"
              [class.text-white]="currentStep() > 2"
              [class.bg-muted]="currentStep() < 2"
              [class.text-muted-foreground]="currentStep() < 2"
            >
              @if (currentStep() > 2) {
                <i class="ki-filled ki-check text-sm"></i>
              } @else {
                <span>2</span>
              }
            </div>
            <span class="text-xs font-medium hidden sm:inline">Pozisyon</span>
          </div>

          <div class="h-px bg-gray-300 dark:bg-gray-600 flex-1"></div>

          <!-- Step 3 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(3)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 3"
              [class.text-primary-foreground]="currentStep() === 3"
              [class.bg-green-500]="currentStep() > 3"
              [class.text-white]="currentStep() > 3"
              [class.bg-muted]="currentStep() < 3"
              [class.text-muted-foreground]="currentStep() < 3"
            >
              @if (currentStep() > 3) {
                <i class="ki-filled ki-check text-sm"></i>
              } @else {
                <span>3</span>
              }
            </div>
            <span class="text-xs font-medium hidden sm:inline">İletişim</span>
          </div>

          <div class="h-px bg-gray-300 dark:bg-gray-600 flex-1"></div>

          <!-- Step 4 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(4)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 4"
              [class.text-primary-foreground]="currentStep() === 4"
              [class.bg-green-500]="currentStep() > 4"
              [class.text-white]="currentStep() > 4"
              [class.bg-muted]="currentStep() < 4"
              [class.text-muted-foreground]="currentStep() < 4"
            >
              @if (currentStep() > 4) {
                <i class="ki-filled ki-check text-sm"></i>
              } @else {
                <span>4</span>
              }
            </div>
            <span class="text-xs font-medium hidden sm:inline">Eğitim</span>
          </div>

          <div class="h-px bg-gray-300 dark:bg-gray-600 flex-1"></div>

          <!-- Step 5 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(5)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 5"
              [class.text-primary-foreground]="currentStep() === 5"
              [class.bg-green-500]="currentStep() > 5"
              [class.text-white]="currentStep() > 5"
              [class.bg-muted]="currentStep() < 5"
              [class.text-muted-foreground]="currentStep() < 5"
            >
              @if (currentStep() > 5) {
                <i class="ki-filled ki-check text-sm"></i>
              } @else {
                <span>5</span>
              }
            </div>
            <span class="text-xs font-medium hidden sm:inline">Fotoğraf</span>
          </div>

          <div class="h-px bg-gray-300 dark:bg-gray-600 flex-1"></div>

          <!-- Step 6 -->
          <div
            class="flex items-center gap-2 flex-1 cursor-pointer"
            (click)="goToStep(6)"
          >
            <div
              class="shrink-0 rounded-full size-8 flex items-center justify-center text-sm font-semibold transition-all"
              [class.bg-primary]="currentStep() === 6"
              [class.text-primary-foreground]="currentStep() === 6"
              [class.bg-green-500]="currentStep() > 6"
              [class.text-white]="currentStep() > 6"
              [class.bg-muted]="currentStep() < 6"
              [class.text-muted-foreground]="currentStep() < 6"
            >
              <span>6</span>
            </div>
            <span class="text-xs font-medium hidden sm:inline">Hesap</span>
          </div>
        </div>
      </div>

      <!-- Form Content - Scrollable -->
      <div class="flex-1 overflow-y-auto px-6 py-6">

        <!-- Step 1: Temel Kimlik Bilgileri -->
        @if (currentStep() === 1) {
          <div class="space-y-4">
            <h4 class="text-base font-semibold text-gray-900 dark:text-white mb-4">
              Temel Kimlik Bilgileri
            </h4>

            <!-- TC Kimlik Numarası -->
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                TC Kimlik Numarası
                <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                class="kt-input w-full"
                [class.!border-red-500]="shouldShowStep1IdentityError()"
                placeholder="12345678901"
                maxlength="11"
                [ngModel]="createEmployeeForm.citizen.identityNumber()"
                (ngModelChange)="createEmployeeForm.citizen.identityNumber.set($event)"
                (blur)="step1Touched.identityNumber.set(true)"
                [ngModelOptions]="{ standalone: true }"
              />
              @if (shouldShowStep1IdentityError()) {
                <div class="flex items-center gap-1.5 mt-1.5">
                  <i class="ki-filled ki-information text-sm text-red-500"></i>
                  <span class="text-xs text-red-600 dark:text-red-400">
                    {{ getStep1IdentityError() }}
                  </span>
                </div>
              }
            </div>

            <!-- Ad ve Soyad -->
            <div class="grid grid-cols-2 gap-4">
          <!-- First Name Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Ad
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreateFirstNameError()"
              placeholder="Ad"
              [ngModel]="createForm.firstName()"
              (ngModelChange)="createForm.firstName.set($event)"
              (blur)="createFormTouched.firstName.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowCreateFirstNameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreateFirstNameError() }}
                </span>
              </div>
            }
          </div>

          <!-- Last Name Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Soyad
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreateLastNameError()"
              placeholder="Soyad"
              [ngModel]="createForm.lastName()"
              (ngModelChange)="createForm.lastName.set($event)"
              (blur)="createFormTouched.lastName.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowCreateLastNameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreateLastNameError() }}
                </span>
              </div>
            }
          </div>
        </div>

        <!-- 2. Satır: Email ve Kullanıcı Adı -->
        <div class="grid grid-cols-2 gap-4">
          <!-- Email Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              E-posta
              <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreateEmailError()"
              placeholder="ornek@email.com"
              [ngModel]="createForm.email()"
              (ngModelChange)="createForm.email.set($event)"
              (blur)="createFormTouched.email.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="200"
            />
            @if (shouldShowCreateEmailError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreateEmailError() }}
                </span>
              </div>
            }
          </div>

          <!-- Username Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Kullanıcı Adı
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreateUsernameError()"
              placeholder="Kullanıcı adı"
              [ngModel]="createForm.username()"
              (ngModelChange)="createForm.username.set($event)"
              (blur)="createFormTouched.username.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowCreateUsernameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreateUsernameError() }}
                </span>
              </div>
            }
          </div>
        </div>

        <!-- 3. Satır: Şifre ve Şifre Tekrar -->
        <div class="grid grid-cols-2 gap-4">
          <!-- Password Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Şifre
              <span class="text-red-500">*</span>
            </label>
            <input
              type="password"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreatePasswordError()"
              placeholder="Şifre"
              [ngModel]="createForm.password()"
              (ngModelChange)="createForm.password.set($event)"
              (blur)="createFormTouched.password.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowCreatePasswordError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreatePasswordError() }}
                </span>
              </div>
            }
          </div>

          <!-- Password Confirm Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Şifre Tekrar
              <span class="text-red-500">*</span>
            </label>
            <input
              type="password"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowCreatePasswordConfirmError()"
              placeholder="Şifre tekrar"
              [ngModel]="createForm.passwordConfirm()"
              (ngModelChange)="createForm.passwordConfirm.set($event)"
              (blur)="createFormTouched.passwordConfirm.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowCreatePasswordConfirmError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getCreatePasswordConfirmError() }}
                </span>
              </div>
            }
          </div>
        </div>

        <!-- 4. Satır: Birim ve Durum -->
        <div class="grid grid-cols-2 gap-4">
          <!-- Organization Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Birim
            </label>
            <select
              id="createModalOrganizationId"
              class="kt-select w-full text-sm"
              data-kt-select="true"
              data-kt-select-placeholder="Birim seçiniz"
              data-kt-select-enable-search="true"
              data-kt-select-search-placeholder="Ara..."
              [ngModel]="createForm.organizationId() ?? ''"
              (ngModelChange)="
                createForm.organizationId.set($event !== '' ? $event : null)
              "
              [ngModelOptions]="{ standalone: true }"
              [disabled]="createFormSubmitting()"
            >
              <option value=""></option>
              <!-- Organizations will be loaded here -->
            </select>
          </div>

          <!-- Is Active Switch -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Durum
            </label>
            <div class="flex items-center gap-2 mt-1">
              <input
                type="checkbox"
                class="kt-switch"
                id="createIsActive"
                [ngModel]="createForm.isActive()"
                (ngModelChange)="createForm.isActive.set($event)"
                [ngModelOptions]="{ standalone: true }"
                [disabled]="createFormSubmitting()"
              />
              <label
                for="createIsActive"
                class="text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer"
              >
                {{ createForm.isActive() ? "Aktif" : "Pasif" }}
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div
        class="flex justify-end gap-2.5 px-6 py-4 border-t border-gray-200 dark:border-gray-700 sticky bottom-0 bg-white dark:bg-gray-800"
      >
        <button
          type="button"
          class="kt-btn kt-btn-outline"
          (click)="closeCreateModal()"
          [disabled]="createFormSubmitting()"
        >
          İptal
        </button>
        <button
          type="button"
          class="kt-btn kt-btn-primary"
          (click)="submitCreateForm()"
          [disabled]="!isCreateFormValid() || createFormSubmitting()"
        >
          @if (createFormSubmitting()) {
            <span class="flex items-center gap-2">
              <span
                class="spinner animate-spin border-2 border-current border-t-transparent rounded-full w-4 h-4"
              ></span>
              Kaydediliyor...
            </span>
          } @else {
            Kaydet
          }
        </button>
      </div>
    </div>
  </div>
}

<!-- Edit Modal -->
@if (editModalOpen()) {
  <!-- Modal Backdrop -->
  <div
    class="fixed inset-0 bg-black/50 z-[100] transition-opacity"
    (click)="closeEditModal()"
  ></div>

  <!-- Modal Content -->
  <div class="fixed inset-0 z-[101] flex items-center justify-center p-4">
    <div
      class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-2xl w-full relative max-h-[90vh] overflow-y-auto"
      (click)="$event.stopPropagation()"
    >
      <!-- Header -->
      <div
        class="flex items-center justify-between px-5 py-4 border-b border-gray-200 dark:border-gray-700 sticky top-0 bg-white dark:bg-gray-800 z-10"
      >
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
          Kullanıcı Düzenle
        </h3>
        <button
          type="button"
          class="kt-btn kt-btn-ghost kt-btn-icon kt-btn-sm"
          (click)="closeEditModal()"
          [disabled]="editFormSubmitting()"
        >
          <i class="ki-filled ki-cross"></i>
        </button>
      </div>

      <!-- Form Content -->
      <div class="p-6 space-y-4">
        <!-- 1. Satır: Ad ve Soyad -->
        <div class="grid grid-cols-2 gap-4">
          <!-- First Name Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Ad
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowEditFirstNameError()"
              placeholder="Ad"
              [ngModel]="editForm.firstName()"
              (ngModelChange)="editForm.firstName.set($event)"
              (blur)="editFormTouched.firstName.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="editFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowEditFirstNameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getEditFirstNameError() }}
                </span>
              </div>
            }
          </div>

          <!-- Last Name Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Soyad
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowEditLastNameError()"
              placeholder="Soyad"
              [ngModel]="editForm.lastName()"
              (ngModelChange)="editForm.lastName.set($event)"
              (blur)="editFormTouched.lastName.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="editFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowEditLastNameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getEditLastNameError() }}
                </span>
              </div>
            }
          </div>
        </div>

        <!-- 2. Satır: Email ve Kullanıcı Adı -->
        <div class="grid grid-cols-2 gap-4">
          <!-- Email Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              E-posta
              <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowEditEmailError()"
              placeholder="ornek@email.com"
              [ngModel]="editForm.email()"
              (ngModelChange)="editForm.email.set($event)"
              (blur)="editFormTouched.email.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="editFormSubmitting()"
              maxlength="200"
            />
            @if (shouldShowEditEmailError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getEditEmailError() }}
                </span>
              </div>
            }
          </div>

          <!-- Username Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Kullanıcı Adı
              <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              class="kt-input w-full"
              [class.!border-red-500]="shouldShowEditUsernameError()"
              placeholder="Kullanıcı adı"
              [ngModel]="editForm.username()"
              (ngModelChange)="editForm.username.set($event)"
              (blur)="editFormTouched.username.set(true)"
              [ngModelOptions]="{ standalone: true }"
              [disabled]="editFormSubmitting()"
              maxlength="100"
            />
            @if (shouldShowEditUsernameError()) {
              <div class="flex items-center gap-1.5 mt-1.5">
                <i class="ki-filled ki-information text-sm text-red-500"></i>
                <span class="text-xs text-red-600 dark:text-red-400">
                  {{ getEditUsernameError() }}
                </span>
              </div>
            }
          </div>
        </div>

        <!-- 3. Satır: Birim ve Durum -->
        <div class="grid grid-cols-2 gap-4">
          <!-- Organization Field -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Birim
            </label>
            <select
              id="editModalOrganizationId"
              class="kt-select w-full text-sm"
              data-kt-select="true"
              data-kt-select-placeholder="Birim seçiniz"
              data-kt-select-enable-search="true"
              data-kt-select-search-placeholder="Ara..."
              [ngModel]="editForm.organizationId() ?? ''"
              (ngModelChange)="
                editForm.organizationId.set($event !== '' ? $event : null)
              "
              [ngModelOptions]="{ standalone: true }"
              [disabled]="editFormSubmitting()"
            >
              <option value=""></option>
              <!-- Organizations will be loaded here -->
            </select>
          </div>

          <!-- Is Active Switch -->
          <div>
            <label
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
            >
              Durum
            </label>
            <div class="flex items-center gap-2 mt-1">
              <input
                type="checkbox"
                class="kt-switch"
                id="editIsActive"
                [ngModel]="editForm.isActive()"
                (ngModelChange)="editForm.isActive.set($event)"
                [ngModelOptions]="{ standalone: true }"
                [disabled]="editFormSubmitting()"
              />
              <label
                for="editIsActive"
                class="text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer"
              >
                {{ editForm.isActive() ? "Aktif" : "Pasif" }}
              </label>
            </div>
          </div>
        </div>

        <!-- Şifre Değiştirme Bölümü -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <div class="flex items-center gap-2 mb-4">
            <input
              type="checkbox"
              class="kt-checkbox"
              id="changePassword"
              [ngModel]="changePassword()"
              (ngModelChange)="changePassword.set($event)"
              [ngModelOptions]="{ standalone: true }"
            />
            <label
              for="changePassword"
              class="text-sm font-medium text-gray-700 dark:text-gray-300 cursor-pointer"
            >
              Şifre Değiştir
            </label>
          </div>

          @if (changePassword()) {
            <div class="grid grid-cols-2 gap-4">
              <!-- New Password Field -->
              <div>
                <label
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                >
                  Yeni Şifre
                  <span class="text-red-500">*</span>
                </label>
                <input
                  type="password"
                  class="kt-input w-full"
                  [class.!border-red-500]="shouldShowEditPasswordError()"
                  placeholder="Yeni şifre"
                  [ngModel]="editForm.password()"
                  (ngModelChange)="editForm.password.set($event)"
                  (blur)="editFormTouched.password.set(true)"
                  [ngModelOptions]="{ standalone: true }"
                  [disabled]="editFormSubmitting()"
                  maxlength="100"
                />
                @if (shouldShowEditPasswordError()) {
                  <div class="flex items-center gap-1.5 mt-1.5">
                    <i
                      class="ki-filled ki-information text-sm text-red-500"
                    ></i>
                    <span class="text-xs text-red-600 dark:text-red-400">
                      {{ getEditPasswordError() }}
                    </span>
                  </div>
                }
              </div>

              <!-- Password Confirm Field -->
              <div>
                <label
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
                >
                  Yeni Şifre Tekrar
                  <span class="text-red-500">*</span>
                </label>
                <input
                  type="password"
                  class="kt-input w-full"
                  [class.!border-red-500]="shouldShowEditPasswordConfirmError()"
                  placeholder="Yeni şifre tekrar"
                  [ngModel]="editForm.passwordConfirm()"
                  (ngModelChange)="editForm.passwordConfirm.set($event)"
                  (blur)="editFormTouched.passwordConfirm.set(true)"
                  [ngModelOptions]="{ standalone: true }"
                  [disabled]="editFormSubmitting()"
                  maxlength="100"
                />
                @if (shouldShowEditPasswordConfirmError()) {
                  <div class="flex items-center gap-1.5 mt-1.5">
                    <i
                      class="ki-filled ki-information text-sm text-red-500"
                    ></i>
                    <span class="text-xs text-red-600 dark:text-red-400">
                      {{ getEditPasswordConfirmError() }}
                    </span>
                  </div>
                }
              </div>
            </div>
          }
        </div>
      </div>

      <!-- Footer Actions -->
      <div
        class="flex justify-end gap-2.5 px-6 py-4 border-t border-gray-200 dark:border-gray-700 sticky bottom-0 bg-white dark:bg-gray-800"
      >
        <button
          type="button"
          class="kt-btn kt-btn-outline"
          (click)="closeEditModal()"
          [disabled]="editFormSubmitting()"
        >
          İptal
        </button>
        <button
          type="button"
          class="kt-btn kt-btn-primary"
          (click)="submitEditForm()"
          [disabled]="!isEditFormValid() || editFormSubmitting()"
        >
          @if (editFormSubmitting()) {
            <span class="flex items-center gap-2">
              <span
                class="spinner animate-spin border-2 border-current border-t-transparent rounded-full w-4 h-4"
              ></span>
              Güncelleniyor...
            </span>
          } @else {
            Güncelle
          }
        </button>
      </div>
    </div>
  </div>
}

<!-- Delete Confirmation Modal -->
@if (deleteModalOpen()) {
  <!-- Modal Backdrop -->
  <div
    class="fixed inset-0 bg-black/50 z-[100] transition-opacity"
    (click)="closeDeleteModal()"
  ></div>

  <!-- Modal Content -->
  <div class="fixed inset-0 z-[101] flex items-center justify-center p-4">
    <div
      class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-md w-full relative"
    >
      <!-- Content Section -->
      <div class="flex flex-col pt-6 pb-6 px-6">
        <h3
          class="text-xl font-semibold text-gray-900 dark:text-white mb-4 text-center"
        >
          Kaydı Silmek İstediğinize Emin misiniz?
        </h3>

        @if (selectedUser()) {
          <div class="w-full space-y-3">
            <div
              class="flex items-start gap-2 p-3 bg-yellow-50 dark:bg-yellow-900/10 border border-yellow-200 dark:border-yellow-800 rounded-lg"
            >
              <svg
                class="w-5 h-5 text-yellow-600 dark:text-yellow-500 mt-0.5 flex-shrink-0"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                  clip-rule="evenodd"
                />
              </svg>
              <p class="text-sm text-yellow-800 dark:text-yellow-200">
                Bu işlem geri alınamaz. Kullanıcı kalıcı olarak silinecektir.
              </p>
            </div>

            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">
                Silinecek Kullanıcı:
              </p>
              <p class="text-base font-semibold text-gray-900 dark:text-white">
                {{ selectedUser()!.name }}
              </p>
              @if (selectedUser()!.email) {
                <p class="text-sm text-gray-500 dark:text-gray-300 mt-1">
                  Email:
                  <span class="font-medium text-gray-700 dark:text-gray-200">{{
                    selectedUser()!.email
                  }}</span>
                </p>
              }
            </div>
          </div>
        }
      </div>

      <!-- Actions -->
      <div class="flex gap-3 p-6 pt-0">
        <button
          class="flex-1 px-6 py-3 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg transition-colors"
          (click)="closeDeleteModal()"
          type="button"
        >
          İptal
        </button>
        <button
          class="flex-1 px-6 py-3 text-sm font-medium text-white bg-red-600 hover:bg-red-700 dark:bg-red-600 dark:hover:bg-red-700 rounded-lg transition-colors flex items-center justify-center gap-2"
          (click)="confirmDelete()"
          type="button"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
            />
          </svg>
          Evet, Sil
        </button>
      </div>
    </div>
  </div>
}
