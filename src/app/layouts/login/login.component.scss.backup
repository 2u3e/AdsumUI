// Background
.page-bg {
  position: relative;
  background-image: url('/assets/media/images/2600x1200/bg-10.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;

  // Modern gradient overlay
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.05) 0%,
      rgba(147, 197, 253, 0.03) 50%,
      rgba(239, 246, 255, 0.05) 100%
    );
    pointer-events: none;
  }
}

.dark .page-bg {
  background-image: url('/assets/media/images/2600x1200/bg-10-dark.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;

  &::before {
    background: linear-gradient(
      135deg,
      rgba(30, 58, 138, 0.15) 0%,
      rgba(37, 99, 235, 0.08) 50%,
      rgba(17, 24, 39, 0.1) 100%
    );
  }
}

// Login Card - Modern styling
.login-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 24px;
  box-shadow:
    0 20px 60px rgba(0, 0, 0, 0.08),
    0 4px 16px rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;

  &:hover {
    box-shadow:
      0 24px 70px rgba(0, 0, 0, 0.12),
      0 6px 20px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }
}

.dark .login-card {
  background: rgba(30, 30, 40, 0.95);
  border: 1px solid rgba(255, 255, 255, 0.1);

  &:hover {
    box-shadow:
      0 24px 70px rgba(0, 0, 0, 0.4),
      0 6px 20px rgba(0, 0, 0, 0.2);
  }
}

// Error Message
.error-message {
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border: 1px solid #fca5a5;
  border-radius: 12px;
  padding: 14px 16px;
  display: flex;
  align-items: flex-start;
  gap: 10px;
  font-size: 0.875rem;
  color: #dc2626;
  animation: slideIn 0.3s ease-out;

  i {
    font-size: 1rem;
    margin-top: 2px;
    flex-shrink: 0;
  }
}

.dark .error-message {
  background: linear-gradient(135deg, rgba(220, 38, 38, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%);
  border-color: rgba(220, 38, 38, 0.3);
  color: #fca5a5;
}

// Input Label
.input-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: #374151;
  margin-bottom: 4px;
  transition: color 0.2s ease;
}

.dark .input-label {
  color: #d1d5db;
}

// Input Wrapper with Icon
.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;

  .input-icon {
    position: absolute;
    left: 14px;
    font-size: 1.125rem;
    color: #9ca3af;
    pointer-events: none;
    transition: color 0.2s ease;
    z-index: 1;
  }

  &:focus-within .input-icon {
    color: #3b82f6;
  }
}

.dark .input-wrapper {
  .input-icon {
    color: #6b7280;
  }

  &:focus-within .input-icon {
    color: #60a5fa;
  }
}

// Modern Input
.modern-input {
  width: 100%;
  padding: 12px 14px 12px 46px;
  font-size: 0.9375rem;
  border: 2px solid #e5e7eb;
  border-radius: 12px;
  background: #ffffff;
  color: #1f2937;
  transition: all 0.2s ease;
  outline: none;

  &::placeholder {
    color: #9ca3af;
  }

  &:hover {
    border-color: #d1d5db;
  }

  &:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    background: #ffffff;
  }

  &.error {
    border-color: #ef4444;
    background: #fef2f2;

    &:focus {
      border-color: #dc2626;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
    }
  }
}

.dark .modern-input {
  background: rgba(31, 41, 55, 0.5);
  border-color: rgba(75, 85, 99, 0.5);
  color: #f9fafb;

  &::placeholder {
    color: #6b7280;
  }

  &:hover {
    border-color: rgba(107, 114, 128, 0.6);
    background: rgba(31, 41, 55, 0.7);
  }

  &:focus {
    border-color: #60a5fa;
    box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.15);
    background: rgba(31, 41, 55, 0.8);
  }

  &.error {
    border-color: #ef4444;
    background: rgba(127, 29, 29, 0.2);

    &:focus {
      border-color: #dc2626;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.15);
    }
  }
}

// Password Toggle Button
.password-toggle {
  position: absolute;
  right: 12px;
  padding: 6px;
  background: transparent;
  border: none;
  cursor: pointer;
  color: #9ca3af;
  border-radius: 6px;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;

  i {
    font-size: 1.125rem;
  }

  &:hover {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  &:active {
    transform: scale(0.95);
  }
}

.dark .password-toggle {
  color: #6b7280;

  &:hover {
    background: rgba(96, 165, 250, 0.15);
    color: #60a5fa;
  }
}

// Field Error
.field-error {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.75rem;
  color: #ef4444;
  margin-top: 2px;
  animation: slideIn 0.2s ease-out;

  i {
    font-size: 0.75rem;
  }
}

.dark .field-error {
  color: #fca5a5;
}

// Forgot Password Link
.forgot-password-link {
  font-size: 0.8125rem;
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.2s ease;

  &:hover {
    color: #2563eb;
    text-decoration: underline;
  }
}

.dark .forgot-password-link {
  color: #60a5fa;

  &:hover {
    color: #93c5fd;
  }
}

// Login Button - Modern Gradient
.login-button {
  width: 100%;
  padding: 14px 24px;
  margin-top: 8px;
  font-size: 1rem;
  font-weight: 600;
  color: #ffffff;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: none;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;

  &:hover:not(:disabled) {
    background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    transform: translateY(-2px);
  }

  &:active:not(:disabled) {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
  }

  &:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    background: linear-gradient(135deg, #93c5fd 0%, #60a5fa 100%);
    box-shadow: none;
  }
}

.dark .login-button {
  background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.4);

  &:hover:not(:disabled) {
    background: linear-gradient(135deg, #1d4ed8 0%, #1e3a8a 100%);
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.5);
  }

  &:disabled {
    background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
  }
}

// Spinner Animation
.spinner {
  width: 16px;
  height: 16px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// Responsive
@media (max-width: 640px) {
  .login-card {
    margin: 16px;
    border-radius: 16px;
  }

  .kt-card-content {
    padding: 32px 24px !important;
  }
}
